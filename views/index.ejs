    <% include partials/header %>
   
    <div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1><i class="fas fa-paperclip"></i> Welcome to Paper Clip</h1>
        <p>Share your writing creativity with the world!</p>
        <a class ="btn btn-success btn-large" href="/posts/new">Post Article</a>
    </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Some recent Posts <i class="fas fa-level-down-alt"></i></h3>
        </div>
    </div>
        <div class="row text-center" style="display:flex; flex-wrap:wrap;">

    <%posts.forEach(function(camps)
    {%>
        <div class="col-md-3 col-sm-6">
           <div class="thumbnail">
                    <img src="<%= camps.image %>">
                    <div class="caption">
                            <%= camps.name %>
                        </div>
                        <p>
                            <a href="/posts/<%= camps._id  %>" class="btn btn-success">More Info</a>
                        </p>
                </div>
       
        </div>
    <%});%>
    </div>
    </div>
    <% include partials/footer %>