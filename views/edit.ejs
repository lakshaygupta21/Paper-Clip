<% include partials/header%>
<div class="container">
    <div class="row">
<h1 style="text-align:center">Edit Comment</h1>
<div style="width:30% ; margin:25px auto;">

<form action="/posts/<%= post._id %>?_method=PUT"  method="POST">
    <div class="form-group">
<input class="form-control" type="text" name="post[name]" placeholder="Name" value="<%=post.name%>" required>
</div>
<div class="form-group">
<input class="form-control"value="<%=post.image%>" type="text" name="post[image]" placeholder="Image url" required>
</div>
<div class="form-group">
    <textarea class="form-control" type="text" name="post[description]" placeholder="Description"><%=post.description%></textarea>
    </div>
<button class="btn btn-success btn-large btn-block">Submit!</button>
</form>
<div style="margin:20px auto;">
<a  href="/posts">Go Back!!</a>
</div>
</div>
</div>
</div>
<% include partials/footer %>